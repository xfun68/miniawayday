  <script type="text/javascript" src="/javascripts/google-maps-api.js"></script>
  <script type="text/javascript" src="/javascripts/jquery-1.6.2.min.js"></script>
  <script type="text/javascript" src="/javascripts/jquery.mobile-1.0b2.min.js"></script>
  <script type="text/javascript" src="/javascripts/jquery.ui.map.full.min.js"></script>
  <script type="text/javascript" src="/javascripts/jquery.ui.map.extensions.js"></script>

  <script type="text/javascript">
    $('#main_page').live("pagecreate", function() {
      $('#map_canvas').gmap({'center': '34.23586446871444, 108.89258209616042'}).bind('init', function(evt, map) {
        $('#map_canvas').gmap('option', 'zoom', 16);
        $('#map_canvas').gmap('addMarker', {'position': map.getCenter(), 'animation': google.maps.Animation.DROP }).click(function() {
          $('#map_canvas').gmap('openInfoWindow', { 'content': '<h3>2011 Mini Away Day</h3>Sculpting In Time, Waiting for You.<br />雕刻时光，等你来秀！<br /><br />高新区科技路55号金桥国际B-C座2楼<hr /><a href="http://g.co/maps/66wpn" target="_blank">Directions</a>'}, this);
        });
        $('#map_canvas').gmap('addMarker', {'position': '34.218781373896135, 108.89038871989024', 'animation': google.maps.Animation.DROP }).click(function() {
          $('#map_canvas').gmap('openInfoWindow', { 'content': '<strong>无尽美食尽在这里哦，吃货～</strong><br /><br />唐延路王子铂金酒店<hr /><a href="http://g.co/maps/6ra76" target="_blank">Directions</a>'}, this);
        });
      });
    });
  </script>

  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-27719209-1']);
